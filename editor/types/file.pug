label {{field.label}}
br
.row(flow-init flow-files-submitted='fn.fileSuccess($file, $flow, slide, field, model)')
	.col.s12.center(ng-if='!model')
		.btn(flow-btn flow-drop) Upload
			i.material-icons.left cloud_upload

	.col.s12.center(ng-if='model')
		.row
			.col.s6.offset-s3
				img.responsive-img(ng-src='{{model}}')
		.btn(ng-click='fn.removeFile(slide, field, model)') Remove
			i.material-icons.left close