	body(ng-app='alpacaEditor' ng-controller='authCtrl')
		mixin links
				//- li: .btn(href='#' ng-click="signInPageRoute()" style='background:#444') Sign In
		header
			nav.white: .nav-wrapper(style='padding: 0 40px')
				a(href='#' ng-click='indexPageRoute()').brand-logo: img(src='img/hotpath_logo_small.svg' height='100%' style='padding: 10px; margin-left:-5;')
				a.button-collapse.orange-text(href='#' data-activates='side-nav')
					i.material-icons menu

				ul.right.hide-on-med-and-down
					+links
				ul#side-nav.side-nav
					+links
		.container(style='width:85%; height: 81%;')
			div(class='col s4 z-depth-6 card-panel' style='width:40%; margin-left:55%; margin-top:20px; box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0), 0 0px 0px 0 rgba(0, 0, 0, 0)')
				form
					h4(style='color:rgba(68, 68, 68, 1);') Sign up
					div(class="row")
					div(class='row')
					div(class='row')
						div(class='input-field col s12')
							i(class='material-icons prefix') perm_identity
							input(id='firstName' type='text' ng-model='firstName' required)
							label(for='firstName') First Name
					div(class='row')
						div(class='input-field col s12')
							i(class='material-icons prefix') perm_identity
							input(id='lastName' type='text' ng-model='lastName' required)
							label(for='lastName') Last Name	
					div(class='row')
						div(class='input-field col s12')
							i(class='material-icons prefix') mail_outline
							input(class='validate' id='email' type='email' ng-model='email')
							label(for='email' data-error='wrong' data-success='right') Email
					div(class='row')
						div(class='input-field col s12')
							i(class='material-icons prefix') lock_outline
							input(id='password' type='password' ng-model='password')
							label(for='password') Password
							
					//- div(class='row')
					//- 	div(class='input-field col s12')
					//- 		i(class='material-icons prefix') lock_outline
					//- 		input(id='confirm' type='password' data-match="password" ng-model='passwordConfirm')
					//- 		label(for='confirm') Confirm Password
					//- 		div(data-ng-show='myForm.confirmPassword.$error.match') Passwords do not match!
					div(class='row' style='margin-bottom:-3px;').center
						btn(class='btn waves-effect btn' ng-click="signUp(firstName, lastName, email, password)" style='background:rgba(0, 188, 212, 0.7);width:75%') Sign Up
					p(style='color:rgba(68, 68, 68, 1); font-weight:bold;') Already have an account? &nbsp;&nbsp;
						a(href='#' style='color:rgb(255, 155, 0)' ng-click='signInPageRoute()') Sign in
		
