	body(ng-app='alpacaEditor' ng-controller='authCtrl')
		mixin links
				//- li: .btn(href='#' ng-click="signInPageRoute()" style='background:#444') Sign In
		header
			nav.white: .nav-wrapper(style='padding: 0 40px')
				a(href='#' ng-click='indexPageRoute()').brand-logo: img(src='img/hotpath_logo_small.svg' height='100%' style='padding: 10px; margin-left:-5;')
				a.button-collapse.orange-text(href='#' data-activates='side-nav')
					i.material-icons menu

				ul.right.hide-on-med-and-down
					+links
				ul#side-nav.side-nav
					+links
		div(style='min-height: 500px; height:calc(100% - 64px);padding:40px;position:relative;')
			.container.white(style='width:85%; height: 100%;'): .row(style='height:100%')
				.col.s12.l6.valign-wrapper.hide-on-med-and-down(style='height:100%; padding:60px;')
					img.responsive-img.valign(src='/img/hamster.png')
				.col.s12.l6.valign-wrapper(style='height:100%')
					form.valign(style='padding:60px' name='myForm')
						div(style='color:rgba(68, 68, 68, 1);')
							h4(style='color:rgba(68, 68, 68, 1);') Sign up
							div(class='input-field col s12')
								i(class='material-icons prefix') perm_identity
								input(id='firstName' type='text' ng-model='firstName' required)
								label(for='firstName') First Name
							div(class='input-field col s12')
								i(class='material-icons prefix') perm_identity
								input(id='lastName' type='text' ng-model='lastName' required)
								label(for='lastName') Last Name	
							div(class='input-field col s12')
								i(class='material-icons prefix') mail_outline
								input(class='validate' id='email' type='email' ng-model='email')
								label(for='email' data-error='wrong' data-success='right') Email
							div(class='input-field col s12')
								i(class='material-icons prefix') lock_outline
								input(id='password' type='password' name="password" ng-model="password" required)
								//- input(id='password' type='password' name="password" ng-model="formData.password" ng-minlength="8" ng-maxlength="20" ng-pattern="/(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z])/" required)
								label(for='password') Password
								//- span(ng-show="myForm.password.$error.required && myForm.password.$dirty") required
								//- span(ng-show="!myForm.password.$error.required && (myForm.password.$error.minlength || myForm.password.$error.maxlength) && myForm.password.$dirty") Passwords must be between 8 and 20 characters.
								//- span(ng-show="!myForm.password.$error.required && !myForm.password.$error.minlength && !myForm.password.$error.maxlength && myForm.password.$error.pattern && myForm.password.$dirty") Must contain one lower &amp; uppercase letter, and one non-alpha character (a number or a symbol.)
							div(class='input-field col s12')
								i(class='material-icons prefix') lock_outline
								input(id='password_c' type='password' name="password_c" ng-model="password_c" valid-password-c required)
								label(for='password_c') Confirm Password

								//- span(ng-show="myForm.password_c.$error.required && myForm.password_c.$dirty") Please confirm your password
								span(ng-show="!myForm.password_c.$error.required && myForm.password_c.$error.noMatch && myForm.password.$dirty" style='color:red;') Passwords do not match
							div(class='row').col.s12.center
								btn(class='btn waves-effect btn' ng-click="signUp(firstName, lastName, email, password)" style='background:rgba(0, 188, 212, 0.7);width:50%; margin-bottom:20px;' ng-disabled="!myForm.password_c.$error.required && myForm.password_c.$error.noMatch && myForm.password.$dirty") Sign Up
							p(style='font-weight:bold;color:rgba(68, 68, 68, 1);') Already have an account? &nbsp;&nbsp;
								a(href='#' style='color:rgb(255, 155, 0); font-weight:bold;font-size:18px;' ng-click='signInPageRoute()') sign in
		
