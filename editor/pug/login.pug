					div(class='row')
						div(class='input-field col s6 m6 l6')
							p: a(href="#modal1") Reset Password
					div(class='row')
						div(class='input-field col s12')
							a(href='#' class='btn waves-effect btn col s12' style='background:linear-gradient(#f6d365 0%, #fda085 51%, #f6d365 100%)' ng-click="signIn()") Sign In
					div(class='row')
			div(id="modal1" class="modal")
				a(href="#!" class="modal-action modal-close" style='float:right; color:black;')
					i(class='material-icons') clear
				div(class="modal-content")
					h1(style='text-align:center; font-size:40px;') Reset Password
					p A password message will be sent to your email address. Please click the link in that message to reset your password
					div(class='input-field col s12')
							i(class='material-icons prefix') mail_outline
							input(class='validate' id='email' type='email' ng-model='email')
							label(for='email') Email
				div(class="modal-footer")
					a(href="#!" class='btn waves-effect btn modal-trigger' style='background:linear-gradient(#f6d365 0%, #fda085 51%, #f6d365 100%)' ng-click="resetPassword()") Reset Password

