	head
		//base(href="/editor")
		link(rel='stylesheet' href='./css/index.css')
		link(rel='stylesheet' href='https://fonts.googleapis.com/icon?family=Material+Icons')
		style.
			html {
				//- display: table;
				//- margin: auto;
			}
			body {
				display: flex;
				min-height: 100vh;
				flex-direction: column;
				font-family: "Raleway", sans-serif;	
				//- display: table-cell;
				//- vertical-align: middle;
				//- background: #4ECDC4;
			}
			#login-page {
				 width: 500px;
			}
	body(ng-app='alpacaEditor' ng-controller='authCtrl')
		mixin links
				li.no: a(href='#' ng-click="signUpRoute()").orange-text Sign Up
		header
			nav.white: .nav-wrapper(style='padding: 0 40px')
				a(href='#' ng-click='indexPageRoute()').brand-logo: img(src='img/hotpath_logo.svg' height='100%' style='padding: 10px')
				a.button-collapse.orange-text(href='#' data-activates='side-nav')
					i.material-icons menu

				ul.right.hide-on-med-and-down
					+links
				ul#side-nav.side-nav
					+links
		div(id='login-page' class='row')
			div(class='col s12 z-depth-6 card-panel')
				form(class='login-form')
					div(class="row")
					div(class='row')
						div(class='input-field col s12')
							i(class='material-icons prefix') mail_outline
							input(class='validate' id='email' type='email' ng-model='email')
							label(for='email' data-error='wrong' data-success='right') Email
					div(class='row')
						div(class='input-field col s12')
							i(class='material-icons prefix') lock_outline
							input(id='password' type='password' ng-model='password')
							label(for='password') Password
					div(class='row')
						div(class='input-field col s12 m12 l12 login-text')
							label(for='remember-me') Remember me 
								input(type='checkbox' id='remember-me')
					div(class='row')
						div(class='input-field col s6 m6 l6')
							p: a(href='#' ng-click='resetPassword()') Forgot Password
					div(class='row')
						div(class='input-field col s12')
							a(href='#' class='btn waves-effect waves-light col s12' ng-click="signIn()") Sign In
					div(class='row')
						//- div(class='input-field col s6 m6 l6')
