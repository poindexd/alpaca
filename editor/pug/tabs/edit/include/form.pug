div(style='margin-bottom: 100px')

	.center(ng-show='selected.readonly' style='padding: 50px;')
		i.material-icons.orange-text.large person
		p This slide belongs to a shared folder.
		p It cannot be edited here.

	.center(ng-show='!selected' style='padding: 50px;')
		i.material-icons.orange-text.large crop_landscape
		p No slide selected

	//-div(ng-show='selected')
		nav: ul
			li: a(href='#') All
			li: a(href='#') Content
			li: a(href='#') Metadata
		.divider

	ul(style='padding-right: 10px' ng-show='selected && !selected.readonly')
		li(ng-repeat='field in schemas["index"].concat(schemas[selected.template])')
			.card-panel
				alpaca-field(model='selected[field.key]' type='field.type' field='field' fn='fn[field.type]' templates='templates' slide='selected')