div(style='margin-bottom: 100px')

	.center(ng-show='selected.readonly' style='padding: 50px;')
		i.material-icons.orange-text.large person
		p This slide belongs to a shared folder.
		p It cannot be edited here.

	.center(ng-show='!selected' style='padding: 50px;')
		i.material-icons.orange-text.large crop_landscape
		p No slide selected

