div(style='display:flex;flex-direction:column;height: 100%')
	include include/nav.pug
	//include include/tabs.pug

	.resizable-wrapper(style='flex: 1')
		.resizable-section.grey.lighten-3(
			
			r-flex='true' 
			r-directions='["right"]'
			style='flex:1;position:relative;z-index:99;'
		)
			include include/slides.pug

		#form-resizable-section.resizable-section.white(
			
			r-flex='true' 
			r-directions='["left","right"]'
			style='flex:2;position:relative;z-index:99;'
		)
			include include/form.pug

		#preview-resizable-section.resizable-section.grey.lighten-3(
			 
			r-flex='true' 
			r-directions='["left"]' 
			style='flex:2'
		)
			include include/preview.pug

	.grey.lighten-3(ng-show='searching && loading == false' style='position:absolute;top:64;left:0;right:0;bottom:0;z-index:200;')
		.container(style='height:100%;display:flex;align-items:center;justify-content:center')
			p.flow-text(ng-show='!loading && !searchtext || searchtext == ""') Search for slides by tag. Results will appear here.

	.grey.lighten-3(ng-show='collectionSettings' style='position:absolute;top:64;left:75;right:0;bottom:0;z-index:200;')
		div(style='position:relative;width: 100%')
			a(href='#' style='position:absolute; top: 10px; right: 10px;' ng-click='collectionSettings = false')
				i.material-icons.large.grey-text close
			.container: .row: .col.s12
				ul.collection: li.collection-item(flow-init flow-files-submitted='collection.setImage($flow, currentCollection)')
					.row
						.col.s12.l6

							label Image
							div(ng-show='!currentCollection.img_url')
								img.responsive-img(ng-src='/img/placeholder2x1.svg')
								.btn.waves-effect.waves-light(flow-btn) Upload
							div(ng-show='currentCollection.img_url')
								img.responsive-img(ng-src='{{currentCollection.img_url}}')
								.btn.red.waves-effect.waves-light(ng-click='collection.removeImage(currentCollection)') Remove Image


						.col.s12.l6
							label Title
							input(ng-model='currentCollection.title')

							.btn.red.waves-effect.waves-light(data-target='collection-delete') Delete
			#collection-delete.modal
				.modal-content
					p Are you sure you want to delete {{currentCollection.title}}?
				.modal-footer
					.btn-flat.waves-effect.waves-light.modal-close(ng-click='collection.remove(currentCollection, collection.index)') Yes
					.btn-flat.waves-effect.waves-light.modal-close No

