html
	head
		title Hotpath
		link(rel='stylesheet' href='./css/index.css')
		link(rel='stylesheet' href='https://fonts.googleapis.com/icon?family=Material+Icons')
		link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Lato:400,700,900' type='text/css')
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		meta(name='description', content="Hotpath description goes in here")
		include include/tracking.pug
		style.
			body {
				@extend .grey;
				@extend .lighten-4;

				font-family: 'Lato', sans-serif;
				//font-family: "Raleway", sans-serif;
				font-weight: 400;
			}

			.row{
				margin-bottom: 0px;
			}

			.gradient { 
				//background:linear-gradient(160deg, #f9b05a 40%, #1adff9 80%);
				//background:linear-gradient(160deg, #bfe0f9 20%, #ffa900 80% );
				background:linear-gradient(160deg, #ffa77d 40%, #ffa900 80% );
			}

			nav {
				box-shadow: none;
			}

			input, textarea {
					width: 100%;
				  background-color: rgba(0,0,0,0.05);
			    border: 0;
			    box-shadow: 0 1px 0 0 rgba(255,255,255,0.05), inset 0 1px 2px 0 rgba(0,0,0,0.15);
			    border-radius: 4px;
			    color: #434e5a;
			    font-family: Lato,sans-serif;
			    font-size: 16px;
			    //padding: 12px 15px;
			    height: 44px;
			    padding: 12px;
			    //width: 339px;
			    outline: none;
			    margin-bottom: 10px;

			    &:focus{
			    	background: white;
			    }
			}

			textarea{
				height: 64px;
			}

			.btn{
				height: 44px;
				line-height: 44px;
				border-radius: 4px;
				box-shadow: none;
				@extend .blue;

				&:hover{
					@extend .lighten-1;
					box-shadow: none;
				}
			}

	body
		//(ng-app='alpacaEditor' ng-controller ='authCtrl')

		include sections/header.pug
		include sections/features.pug
		include sections/contact.pug
		include sections/footer.pug

